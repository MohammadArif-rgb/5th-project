<body>
    <button id="darkModeToggle">Toggle Dark Mode</button>
    <div class="mood-tracker">
        <h1>How are you feeling today?</h1>
        <div id="moodButtons">
            <button class="mood-button" data-mood="Happy" data-color="yellow">ðŸ˜Š Happy</button>
            <button class="mood-button" data-mood="Sad" data-color="lightblue">ðŸ˜¢ Sad</button>
            <button class="mood-button" data-mood="Excited" data-color="lightgreen">ðŸ¤© Excited</button>
            <button class="mood-button" data-mood="Calm" data-color="lightcoral">ðŸ˜Œ Calm</button>
        </div>
        <div id="moodHistory">
            <h2>Mood History</h2>
            <ul id="moodList"></ul>
        </div>
    </div>

    <script>
        const moodButtons = document.getElementById('moodButtons');
        const body = document.body;
        const moodList = document.getElementById('moodList');
        const darkModeToggle = document.getElementById('darkModeToggle');

        let moodHistory = [];

        moodButtons.addEventListener('click', function(event) {
            if (event.target.classList.contains('mood-button')) {
                const mood = event.target.dataset.mood;
                const color = event.target.dataset.color;

                body.style.backgroundColor = color;
                moodHistory.push(mood);
                updateMoodHistory();
            }
        });

        function updateMoodHistory() {
            moodList.innerHTML = '';
            moodHistory.forEach(mood => {
                const listItem = document.createElement('li');
                listItem.textContent = mood;
                moodList.appendChild(listItem);
            });
        }

        darkModeToggle.addEventListener('click', function() {
            body.classList.toggle('dark-mode');
        });
    </script>
</body>
</html>
